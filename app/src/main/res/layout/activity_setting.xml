<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        style="@style/TitleStytle"
        android:text="设置中心"/>

    <com.duanshuo.mobilesafe.com.duanshuo.mobilesafe.view.SettingItemView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.duanshuo.mobilesafe"
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:destitle="自动更新设置"
        mobilesafe:desoff="自动更新已关闭"
        mobilesafe:deson="自动更新已开启"
        />
    <com.duanshuo.mobilesafe.com.duanshuo.mobilesafe.view.SettingItemView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.duanshuo.mobilesafe"
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:destitle="电话归属地显示设置"
        mobilesafe:desoff="归属地显示已关闭"
        mobilesafe:deson="归属地显示已开启"
        />

    <!--SettingItemView需要在构建布局的时候指定相应的title和des字符串内容-->
    <!--自定义属性-->


</LinearLayout>
