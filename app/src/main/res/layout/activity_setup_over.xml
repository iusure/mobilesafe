<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
     style="@style/TitleStytle"
        android:text="手机防盗"
     />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text="安全号码" />

        <TextView
            android:id="@+id/tv_safe_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="111" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_divider" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:text="防盗保护是否开启" />

        <ImageView
            android:id="@+id/iv_lock"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/unlock"
            android:layout_margin="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="111" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_divider" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/txt_shape_selector"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="#000"
        android:textSize="18sp"
        android:padding="5dp"
        android:onClick="reSetup"
        android:layout_marginLeft="5dp"
        android:text="重新进入向导"
     />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_divider" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:textColor="#000"
        android:textSize="18sp"
        android:background="#5000"
        android:layout_marginLeft="0dp"
        android:text="功能简介" />

    <TextView
        android:text="GPS追踪：#*Location*#"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="18sp"
        android:drawableLeft="@android:drawable/star_big_on"
        android:gravity="center_vertical"
        android:layout_margin="5dp"/>
    <TextView
        android:text="播放报警音乐：#*Alarm*#"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="18sp"
        android:drawableLeft="@android:drawable/star_big_on"
        android:gravity="center_vertical"
        android:layout_margin="5dp"/>
    <TextView
        android:text="远程删除数据：#*wipedata*#"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="18sp"
        android:drawableLeft="@android:drawable/star_big_on"
        android:gravity="center_vertical"
        android:layout_margin="5dp"/>
    <TextView
        android:text="远程锁屏：#*lockscreen*#"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="18sp"
        android:drawableLeft="@android:drawable/star_big_on"
        android:gravity="center_vertical"
        android:layout_margin="5dp"/>



</LinearLayout>
